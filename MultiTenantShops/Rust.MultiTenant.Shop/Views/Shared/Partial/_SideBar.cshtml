@using AspNet.Security.OpenId.Steam
@{
    var tenantInfo = Context.GetMultiTenantContext().TenantInfo;
}

<div class="well">
    @if (User?.Identity?.IsAuthenticated ?? false)
    {
        <div class="text-center">
            <h3 class="text-center">@User.Identity.Name</h3>
            <img class="avatar" src="@Context.User.Claims.FirstOrDefault(x => x.Type == SteamAuthenticationConstants.Parameters.AvatarFull)?.Value" alt="Steam avatar" />
        </div>
    }
    else
    {
        <div class="text-center">
            <h3 class="text-center">Anonymous</h3>
            <img class="avatar text-center" src="https://i.imgur.com/7dNjJ6y.jpg" alt="Anonymous avatar" />
        </div>
    }
</div>