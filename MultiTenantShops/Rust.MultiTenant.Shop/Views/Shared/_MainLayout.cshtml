@using EasyShop.Domain.ViewModels.RustStore.Store.Order
@{
    Layout = "_BaseLayout";
}

@section Styles
{
    @RenderSection("Styles", false)
}

<body class="layout layout-header-fixed layout-sidebar-fixed layout-footer-fixed well-custom">
    @await Html.PartialAsync("Partial/_Header")
    <div id="spinner">
        <div class="text-center">
            <div class="spinner spinner-primary spinner-lg"></div>
        </div>
    </div>
    <div id="main-layout" class="layout-main" style="display: none;">
        <div class="layout-content">
            <div class="layout-content-body">
                <div class="container">
                    <img class="m-b-md" style="width: 100%;" src="https://i.imgur.com/jcNgsYp.png" alt="Service logo" />
                    @RenderBody()
                </div>
            </div>
        </div>
        @await Html.PartialAsync("Partial/_Footer")
        @await Html.PartialAsync("Partial/_BuyModal", new RustStoreStandardItemOrder())
    </div>
    <script src="~/js/vendor.min.js" asp-append-version="true"></script>
    <script src="~/js/elephant.min.js" asp-append-version="true"></script>
    <script src="~/js/application.min.js" asp-append-version="true"></script>
    <script src="~/js/page-load-spinner.js" asp-append-version="true"></script>
    @RenderSection("Scripts", false)
    @Html.PartialAsync("Partial/_GoogleAnalyticScript")
</body>
