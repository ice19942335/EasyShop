@model EasyShop.Domain.ViewModels.CP.Account.LoginUserViewModel
@{
    ViewData["Title"] = "Sign-In";
    Layout = "_AuthLayout";
}

<div class="login">
    <div class="login-body">
        <a class="login-brand" asp-area="" asp-controller="Home" asp-action="Index">
            <img class="img-responsive" src="~/img/LogoNameSlogan.png" alt="Monetization">
        </a>
        <div class="login-form">
            <form data-toggle="validator" method="post" asp-area="" asp-controller="Account" asp-action="Login" asp-antiforgery="true">
                <div asp-validation-summary="ModelOnly" class="alert alert-info"></div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input asp-for="UserName" id="email" class="form-control" type="email" spellcheck="false" autocomplete="off" data-msg-required="Please enter your email address." required>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input asp-for="Password" id="password" class="form-control" type="password" minlength="10" data-msg-minlength="Password must be 10 characters or more." data-msg-required="Please enter your password." required>
                </div>
                <div class="form-group">
                    <label class="custom-control custom-control-primary custom-checkbox">
                        <input asp-for="RememberMe" class="custom-control-input" type="checkbox" checked="checked">
                        <span class="custom-control-indicator"></span>
                        <span class="custom-control-label">Keep me signed in</span>
                    </label>
                    <span aria-hidden="true"> · </span>
                    <a asp-area="" asp-controller="Account" asp-action="ForgotPassword">Forgot password?</a>
                </div>
                <button class="btn btn-primary btn-block" type="submit">Sign in</button>
            </form>
        </div>
    </div>
    <div class="login-footer">
        Don't have an account? <a asp-area="" asp-controller="Account" asp-action="Register">Sign Up</a>
    </div>
</div>

@section Styles
{
    <link rel="stylesheet" href="~/css/login-2.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/custom/Override/override-login-2.css" asp-append-version="true">
}

@section Scripts{
    @await Html.PartialAsync("Partial/_ValidationScripts")
}

