@model EasyShop.Domain.ViewModels.ControlPanel.Tariff.TariffViewModel
@{
    ViewData["Title"] = "EditTariff";
    Layout = "_AdminLayout";
}


<div class="col-lg-4 col-lg-offset-4 text-center">
    <h2>Add new / Edit existing</h2>
</div>

<div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
    <div class="demo-form-wrapper">
        <form method="post" asp-area="" asp-controller="AdminTariff" asp-action="EditTariff">
            <div asp-validation-summary="ModelOnly" class="alert alert-info"></div>
            <input asp-for="Id" type="hidden"/>
            <div class="form-group">
                <label>Tariff Name</label>
                <input asp-for="Name" class="form-control" type="text">
            </div>
            <div class="form-group">
                <label>Price</label>
                <input asp-for="Price" class="form-control">
                <span class="help-block">Input example (9,99 or 150,00)</span>
            </div>
            <div class="form-group">
                <label>Days active</label>
                <input asp-for="DaysActive" class="form-control" type="number">
            </div>
            <div class="form-group">
                <label>Description</label>
                <input asp-for="Description" class="form-control" type="text">
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block" type="submit">Add/Edit</button>
            </div>
        </form>
    </div>
</div>

@section Scripts
{
    <script src="~/js/demo.min.js"></script>
}
