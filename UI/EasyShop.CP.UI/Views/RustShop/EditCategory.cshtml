@model EasyShop.Domain.ViewModels.Shop.Rust.RustShopViewModel
@{
    ViewData["Title"] = "EditCategory";
    Layout = "Partial/_RustEditLayout";
}

<div class="well text-center">
    <h2 class="text-center">Edit category</h2>
    <div class="row">
        <div class="col-md-6 col-lg-5">
            <div class="demo-form-wrapper">
                <form method="post" asp-area="" asp-controller="RustShop" asp-action="EditCategory">
                    <input asp-for="@Model.Id" type="hidden" />
                    <input asp-for="@Model.ShopName" type="hidden" />
                    <input asp-for="@Model.ShopTitle" type="hidden" />
                    <input asp-for="@Model.EditRustCategoryViewModel.Category.Id" type="hidden" />
                    <div asp-validation-summary="ModelOnly" class="alert alert-info"></div>
                    <div class="form-group">
                        <label class="pull-left">Category index</label>
                        <input asp-for="@Model.EditRustCategoryViewModel.Category.Index" class="form-control" type="text">
                        <span class="help-block">Smaller index make category higher in list</span>
                    </div>
                    <div class="form-group">
                        <label class="pull-left">Category name</label>
                        <input asp-for="@Model.EditRustCategoryViewModel.Category.Name" class="form-control" type="text">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-block" type="submit">Save changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 col-lg-5">
            <div>
                <span id="deleteButton_@Model.EditRustCategoryViewModel.Category.Id">
                    <button class="btn btn-danger btn-block m-r-md" onclick="deleteConfirmationDialog('@Model.EditRustCategoryViewModel.Category.Id', true)">Delete category</button>
                </span>
                <span style="display: none" id="confirmDeleteSpan_@Model.EditRustCategoryViewModel.Category.Id">
                    <form style="display: inline;" method="get" asp-area="" asp-controller="RustShop" asp-action="DeleteCategory" asp-route-shopId="@Model.Id" asp-route-categoryId="@Model.EditRustCategoryViewModel.Category.Id">
                        <span>Are you sure you want to delete?</span>
                        <button style="max-width: fit-content; display: inline;" class="btn btn-success btn-block" type="submit">Yes</button>
                    </form>
                    <button style="max-width: fit-content; display: inline;" class="btn btn-danger btn-block" onclick="deleteConfirmationDialog('@Model.EditRustCategoryViewModel.Category.Id', false)">No</button>
                </span>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/js/customScripts/DeleteConfirmationDialog.js" asp-append-version="true"></script>
}
