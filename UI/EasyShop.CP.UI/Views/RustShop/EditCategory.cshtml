@model EasyShop.Domain.ViewModels.Shop.Rust.RustShopViewModel
@{
    ViewData["Title"] = "EditCategory";
    Layout = "Partial/_RustEditLayout";
}

<div class="well text-center">
    <div class="row">
        <div class="col-md-8 col-md-offset-2 text-center">
            <h2>Edit category</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-10 col-lg-8">
            <div class="demo-form-wrapper">
                <form method="post" asp-area="" asp-controller="RustShop" asp-action="EditCategory">
                    <input asp-for="@Model.Id" type="hidden" />
                    <input asp-for="@Model.EditRustCategoryViewModel.Category.Id" type="hidden" />
                    <div asp-validation-summary="ModelOnly" class="alert alert-info"></div>
                    <div class="form-group">
                        <label class="pull-left">Category name</label>
                        <input asp-for="@Model.EditRustCategoryViewModel.Category.Name" class="form-control" type="text">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-block" type="submit">Save changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-10 col-lg-8">
            <div>
                <span id="deleteButton_@Model.EditRustCategoryViewModel.Category.Id">
                    <button class="btn btn-danger btn-block m-r-md" onclick="deleteConfirmationDialog('@Model.EditRustCategoryViewModel.Category.Id', true)">Delete shop</button>
                </span>
                <span style="display: none" id="confirmDeleteSpan_@Model.EditRustCategoryViewModel.Category.Id">
                    <form style="display: inline;" method="get" asp-area="" asp-controller="RustShop" asp-action="DeleteCategory" asp-route-shopId="@Model.EditRustCategoryViewModel.Category.Id">
                        <span>Are you sure you want to delete?</span>
                        <button style="max-width: fit-content; display: inline;" class="btn btn-success btn-block" type="submit">Yes</button>
                    </form>
                    <button style="max-width: fit-content; display: inline;" class="btn btn-danger btn-block" onclick="deleteConfirmationDialog('@Model.EditRustCategoryViewModel.Category.Id', false)">No</button>
                </span>
            </div>
        </div>
    </div>
</div>


