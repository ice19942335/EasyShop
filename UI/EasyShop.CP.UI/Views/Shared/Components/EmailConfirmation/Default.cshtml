@model bool

@{
    if (Model)
    {
        <div class="well text-center">
            <h3>Email is successfully confirmed. <span class="icon icon-check"></span></h3>
        </div>
    }
    else
    {
        <div class="well text-center">
            <h3>Welcome to Monetization</h3>
            <h5>
                Please, check your e-mail for a confirmation letter. It can be in a SPAM folder. If you can't find any messages please, press the button below.<br>
            </h5>
            <h4><span class="icon icon-hand-o-down"></span></h4>
            <div>
                <button class="btn btn-primary btn-lg" type="button">Send confirmation link</button>
            </div>
        </div>
    }
}
