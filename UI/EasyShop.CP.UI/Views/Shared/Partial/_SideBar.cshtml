@using EasyShop.Domain.Entries.Identity
@using Microsoft.AspNetCore.Identity
@inject UserManager<AppUser> UserManager

<div class="layout-sidebar">
    <div class="layout-sidebar-backdrop"></div>
    <div class="layout-sidebar-body">
        <div class="custom-scrollbar">
            <nav id="sidenav" class="sidenav-collapse collapse">
                <ul class="sidenav">
                    <li class="sidenav-heading">Menu</li>
                    <li class="sidenav-item">
                        <a asp-area="" asp-controller="ControlPanel" asp-action="Dashboard" asp-route-userId="@UserManager.FindByEmailAsync(User.Identity.Name).Result.Id">
                            <span class="sidenav-icon icon icon-pie-chart"></span>
                            <span class="sidenav-label">Dashboard</span>
                        </a>
                    </li>
                    @await Component.InvokeAsync("SideBarShopsList")
                </ul>
            </nav>
        </div>
    </div>
</div>