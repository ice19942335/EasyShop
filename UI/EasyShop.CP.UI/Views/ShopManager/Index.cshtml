@model EasyShop.Domain.ViewModels.Shop.ShopManagerViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "_ControlPanelLayout";
}


<div class="well text-center">
    <div class="row">
        <div class="col-lg-4 col-lg-offset-4 text-center">
            <h2>My shops</h2>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-sm-4 col-md-3">
            <form method="get" asp-area="" asp-controller="ShopManager" asp-action="CreateShop">
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">New shop</button>
                </div>
            </form>
        </div>
    </div>
    @if (Model.Shops?.Count() > 0)
    {
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-responsive table-center">
                    <thead>
                        <tr>
                            <th>Shop name</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (var shop in Model.Shops)
                            {
                                <tr>
                                    <td>
                                        <strong>@shop.ShopName</strong>
                                    </td>
                                    <td>
                                        <a asp-area="" asp-controller="ShopManager" asp-action="EditShopHandler" asp-route-shopId="@shop.Id"><span class="icon icon-pencil icon-lg icon-fw"></span></a>
                                    </td>
                                    <td>
                                        <button id="deleteButton_@shop.Id" class="btn btn-danger" type="button" onclick="deleteShopConfirmationDialog('@shop.Id', true)">Delete</button>
                                        <span id="confirmDeleteSpan_@shop.Id" style="display: none">
                                            <span>Are you sure you want to delete?</span>
                                            <span>
                                                <form style="display: inline" method="get" asp-area="" asp-controller="ShopManager" asp-action="DeleteShop" asp-route-shopId="@shop.Id">
                                                    <button class="btn btn-success" type="submit">Yes</button>
                                                </form>
                                            </span>
                                            <span>
                                                <button class="btn btn-danger" type="button" onclick="deleteShopConfirmationDialog('@shop.Id', false)">No</button>
                                            </span>
                                        </span>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

@section Scripts
{
    <script src="~/js/customScripts/ShopDeleteConfirmationDialog.js"></script>
}
