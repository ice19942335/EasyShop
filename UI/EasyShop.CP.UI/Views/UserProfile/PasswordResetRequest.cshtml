@model EasyShop.Domain.ViewModels.CP.Account.ForgotPasswordViewModel
@{
    ViewData["Title"] = "PasswordResetRequest";
    Layout = "Partial/_Layout";
}


<div class="well text-center">
    <p>Password reset request. Press the button below to reset your password.</p>
    <form method="post" asp-area="" asp-controller="Account" asp-action="ForgotPassword" asp-route-authenticated="@true">
        <input asp-for="Authenticated" value="@true" type="hidden"/>
        <input asp-for="Email" value="@User.Identity.Name" type="hidden"/>
        <button class="btn btn-primary btn-lg" type="submit">Send request to E-mail</button>
    </form>
</div>
